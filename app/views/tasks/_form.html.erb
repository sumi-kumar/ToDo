<%= form_for [taskable, Task.new] do |f| %>
  <div class="form-group">
  	<%= f.label :title %>
  	<%= f.text_area :title, class:"form-control", placeholder: "Title" %>
  </div>
	<div class="form-group">
		<%= f.label :note %>
		<%= f.text_area :note, class:"form-control", placeholder: "Create a Task.." %>
	</div>
	<%= f.submit class:"btn btn-primary" %>
<% end %>